= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  = f.fields_for :userstories do |builder|
    = render 'userstory_fields', f: builder
  = link_to_add_fields "Add Userstory", f, :userstories

  .actions
    = f.submit 'Save'
